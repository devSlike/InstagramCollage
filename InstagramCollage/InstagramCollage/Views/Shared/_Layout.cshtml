<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="~/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"/>

    <script src="~/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/bower_components/angular/angular.min.js"></script>
    <script src="~/bower_components/angular-route/angular-route.min.js"></script>
</head>
<body>
    <header class="container">
        <a class="navbar-brand" href="#/">Instagram Collage</a>
        <ul class="row nav nav-tabs">
            <li class="active"><a href="#/">Home</a></li>
            <li><a href="#/about">About</a></li>
        </ul>    
    </header>
    @RenderBody()
    <div class="container">
        <hr/>
        <footer class="row">
            <p class="top-left">&copy; @DateTime.Now.Year - Instagram Collage</p>
            <a class="top-right" href="https://github.com/devSlike/InstagramCollage" target="_blank">Project on GitHub</a>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
